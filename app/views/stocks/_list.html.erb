<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Código</th>
      <th>Preço atual</th>
      <% if @user.id == current_user.id %>
        <th></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ticker %></td>
        <td><%= stock.last_price %></td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to "Deletar esta ação", 
                user_stock_path(stock), 
                method: :delete,
                class: 'btn btn-danger btn-xs',
                data: { confirm: 'Tem certeza que quer deletar?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>